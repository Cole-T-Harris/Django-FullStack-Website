{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "stores",
    "description": "stores request/response",
    "type": "object",
    "properties": {
      "requestType": {
        "description": "the type of api request",
        "type": "string",
        "pattern":"^stores$"
      },
      "near": {
        "description": "zipcode to search near",
        "type": "string",
        "pattern": "^[0-9]{5}(?:-[0-9]{4})?$"
      },
      "radius": {
        "description": "radius to search from near",
        "type": "number",
        "minimum": 1
      },
      "limit": {
        "description": "limit of returned stores",
        "type": "number",
        "minimum": 1
      }
    },
    "required": [
      "requestType",
      "near",
      "radius",
      "limit"
    ],
    "additionalProperties": false
  }